<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#63A680">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#63A680">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Romanian"
            android:textStyle="bold"
            android:textSize="60sp"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginLeft="50dp"
            android:gravity="center_horizontal"
            android:background="@drawable/romanian_flag"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/text_view_facts_viewer_romanian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facts"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/gradient_background_green"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/text_view_verbs_forms_viewer_romanian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Form of Verbs"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/gradient_background_green"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/text_view_visitable_places_viewer_romanian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Places to visit where you can practice the language"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/gradient_background_green"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/text_view_start_learning_romanian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start learning"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/gradient_background_green"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/text_view_chat_bot_romanian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chatbot"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/gradient_background_green"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</ScrollView>
