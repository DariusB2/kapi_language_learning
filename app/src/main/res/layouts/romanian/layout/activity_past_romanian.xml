<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#63A680">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#63A680">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/preterite_romanian"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="16dp"
            android:text="
        eu cântai — I sang\n
        tu cântași — you sang\n
        eu citii — I read\n
        el citi — he read\n" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/imperfect_romanian"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="16dp"
            android:text="
        eu cântam — I was singing\n
        tu cântai — you were singing\n
        eu citeam — I was reading\n
        el citea — he was reading\n" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/pluperfect_romanian"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="16dp"
            android:text="
        eu cântasem — I had sung\n
        tu cântaseși — you had sung\n
        eu citisem — I had read\n
        el citise — he had read\n" />
    </LinearLayout>
</ScrollView>