<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#63A680">
    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="What language do you want to learn today?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="35dp"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/text_view_german"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/gradient_background_green"
        android:text="German"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/text_view_spanish"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/gradient_background_green"
        android:text="Spanish"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/text_view_romanian"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/gradient_background_green"
        android:text="Romanian"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center_horizontal" />
</LinearLayout>