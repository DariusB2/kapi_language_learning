            android:textColor="#000000"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_turkey"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="das Kaninchen = the rabbit"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="#000000"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_rabbit"/>

        <Button
            android:id="@+id/button_start_quiz_animals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#A0D9AE"
            app:shapeAppearanceOverlay="@style/stadium"
            android:textColor="@color/black"/>
    </LinearLayout>
</ScrollView>